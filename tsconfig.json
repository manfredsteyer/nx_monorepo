{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@flights/flight-api": ["libs/flight-api/src/index.ts"],
      "@flights/common": ["libs/common/src/index.ts"],
      "@flights/shared": ["libs/shared/src/index.ts"],
      "@flights/passenger-api": ["libs/passenger-api/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
